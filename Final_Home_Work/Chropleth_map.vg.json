{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Life Ladder scores over time (2010-2019)",
    "width": 800,
    "height": 400,
    "view": {"fill": "lightskyblue"},
    "params": [{
        "name": "Year11",
        "value": 2013,
        "bind": {
        "input": "range",
        "min": 2013,
        "max": 2019,
        "step": 1,
        "name": "Year : "
        }
        }]
        ,

    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/ocha0014/FIT3179/main/Vegalite/HW9/js/ne_110m.json",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
            
        }
        
    },
    
    "transform": [
        
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "WHRlatlong.csv"
                },
                "key": "Country name",
                "fields": [
                    "Life Ladder",
                    "year"
                    
                ]
                
            }
            
        }
        
        
    ],
    "mark": {
        "type": "geoshape"
        
    },
    "encoding": {
        "color": {
            
            "field": "Life Ladder",
            "type": "quantitative",
            "scale": {
                "domain": [
                    3,
                    5,
                    7
                  ] ,
                  
                "type": "log"
                
                
            }
              

            
            
            
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Life Ladder",
                "type": "quantitative"
            },
            {
                "field":"year",
                "type": "quantitative"
            }
        ]
    }
    
}